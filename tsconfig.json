{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "target": "ES2020",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "jsx": "react",
        "jsxFactory": "RxFM.createElement"
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
    ]
}
